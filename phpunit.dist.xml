<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="phpunit.php" colors="true" convertErrorsToExceptions="true" convertNoticesToExceptions="true" convertWarningsToExceptions="true" processIsolation="false" stopOnError="false" stopOnFailure="false" syntaxCheck="true" verbose="true">
    <testsuites>
        <testsuite name="Enlighten Framework Tests">
            <directory suffix="Test.php">./tests</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
    <filter>
        <blacklist>
            <exclude>
                <directory>/tests</directory>
            </exclude>
        </blacklist>
    </filter>
</phpunit>